{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "target": "esnext",
    "module": "es2015",
    "types": ["@types/node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"]
}
